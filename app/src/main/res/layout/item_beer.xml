<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/beer_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/beer_breweryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_timestamp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="3dp"
            android:text="@string/placeholder"
            android:textSize="20.25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/beer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_breweryName"
            android:text="@string/placeholder"
            android:textSize="17.5sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/beer_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_description"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/beer_EPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_divider"
            android:layout_alignParentEnd="true"
            android:text="@string/placeholder"
            android:textSize="15.5sp" />

        <TextView
            android:id="@+id/beer_ABV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_EPM"
            android:layout_alignParentEnd="true"
            android:text="@string/placeholder"
            android:textSize="15.5sp" />

        <ImageView
            android:id="@+id/beer_ico_decilitres"
            style="@style/BeerItemIcon"
            android:layout_below="@id/beer_divider"
            android:contentDescription="@string/contentDescription_itemBeer_sizeIcon"
            android:src="@drawable/ico_measure_full" />

        <TextView
            android:id="@+id/beer_decilitres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_divider"
            android:layout_toEndOf="@id/beer_ico_decilitres"
            android:text="@string/placeholder"
            android:textSize="15.5sp" />

        <ImageView
            android:id="@+id/beer_ico_price"
            style="@style/BeerItemIcon"
            android:layout_below="@id/beer_decilitres"
            android:layout_marginStart="1.2dp"
            android:contentDescription="@string/contentDescription_itemBeer_moneyIcon"
            android:src="@drawable/ico_coins" />

        <TextView
            android:id="@+id/beer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_decilitres"
            android:layout_toEndOf="@id/beer_ico_price"
            android:text="@string/placeholder"
            android:textSize="15.5sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
