<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/newPubVisit_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Nová návštěva hospody / akce"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newPubVisit_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPubVisit_header"
        android:layout_marginHorizontal="12dp"
        android:autofillHints=""
        android:hint="Název hospody / akce"
        android:inputType="text" />

    <Button
        android:id="@+id/newPubVisit_buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPubVisit_editText"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:text="OK" />

    <Button
        android:id="@+id/newPubVisit_buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPubVisit_editText"
        android:layout_marginVertical="12dp"
        android:layout_toStartOf="@id/newPubVisit_buttonOK"
        android:text="Zrušit" />

</RelativeLayout>
