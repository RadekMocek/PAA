<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/newPubVisit_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Nová návštěva hospody / akce"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newPubVisit_textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPubVisit_header"
        android:hint="Název hospody / akce"
        android:paddingHorizontal="12dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/newPubVisit_editText"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/newPubVisit_buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPubVisit_textField"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:text="OK" />

    <Button
        android:id="@+id/newPubVisit_buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPubVisit_textField"
        android:layout_marginVertical="12dp"
        android:layout_toStartOf="@id/newPubVisit_buttonOK"
        android:text="Zrušit" />

</RelativeLayout>
